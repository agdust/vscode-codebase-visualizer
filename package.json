{
	"name": "vscode-repository-visualizer",
	"displayName": "Repository Visualizer",
	"description": "Visualize repository files structure.",
	"version": "0.0.1",
	"publisher": "agdust",
	"repository": "https://github.com/agdust/vscode-repository-visualizer",
	"private": false,
	"license": "GPL-3.0-or-later",
	"engines": {
		"vscode": "^1.101.0"
	},
	"categories": [
		"Visualization"
	],
	"activationEvents": [
		"onWebviewPanel:repositoryVisualizer"
	],
	"contributes": {
		"commands": [
			{
				"command": "repositoryVisualizer.start",
				"title": "Visualize your repository",
				"category": "Repository Visualizer"
			}
		]
	},
	"main": "./dist/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run build-prod",
		"package": "vsce package",
		"publish": "vsce publish",
		"build": "npm-run-all build:*",
		"build:extension": "vite build --config ./vite.config.ts",
		"build:webview": "vite build --config ./vite.webview.config.ts",
		"build-prod": "npm-run-all build-prod:*",
		"build-prod:extension": "vite build --config ./vite.config.ts --mode production",
		"build-prod:webview": "vite build --config ./vite.webview.config.ts --mode production",
		"typecheck": "npm-run-all typecheck:*",
		"typecheck:extension": "tsc --noEmit -p src/tsconfig.json",
		"typecheck:webview": "tsc --noEmit -p src/webview/tsconfig.json",
		"lint": "eslint .",
		"watch": "npm-run-all watch:*",
		"watch:extension": "vite build --config ./vite.config.ts --watch",
		"watch:webview": "vite build --config ./vite.webview.config.ts --watch",
		"test": "npm run test:unit && npm run test:integration",
		"test:unit": "mocha -r ts-node/register test/*.test.ts",
		"test:unit:watch": "mocha -r ts-node/register test/*.test.ts --watch",
		"test:integration": "npm run pretest && node ./dist/test/test/integration/run.js",
		"pretest": "tsc --project test/integration",
		"generate-docs": "typedoc",
		"format": "prettier --write --no-error-on-unmatched-pattern **/*.{js,jsx,ts,tsx,vue,json}",
		"prepush": "npm run typecheck && npm run lint && npm run test:unit"
	},
	"devDependencies": {
		"@eslint/js": "^9.39.1",
		"@types/chai": "^5.2.3",
		"@types/chai-as-promised": "^8.0.2",
		"@types/d3": "^7.4.3",
		"@types/mocha": "^10.0.10",
		"@types/node": "^22.13.14",
		"@types/vscode": "^1.101.1",
		"@types/vscode-webview": "^1.57.5",
		"@types/webpack": "^5.28.5",
		"@typescript-eslint/eslint-plugin": "^8.47.0",
		"@typescript-eslint/parser": "^8.47.0",
		"@vscode/test-electron": "^2.5.2",
		"@vscode/vsce": "^3.7.0",
		"chai": "^6.2.1",
		"chai-as-promised": "^8.0.2",
		"eslint": "^9.39.1",
		"globals": "^16.5.0",
		"mocha": "^11.7.5",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.6.2",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.47.0",
		"vite": "^7.2.4"
	},
	"dependencies": {
		"@vscode/debugprotocol": "^1.68.0",
		"d3": "^7.9.0",
		"d3-context-menu": "^2.1.0",
		"tippy.js": "^6.3.7"
	}
}
