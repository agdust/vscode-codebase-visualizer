{
	"name": "codebase-visualizer",
	"displayName": "Codebase Visualizer",
	"description": "Visualize codebase file system structure.",
	"version": "1.1.3",
	"publisher": "agdust",
	"repository": "https://github.com/agdust/vscode-codebase-visualizer",
	"private": false,
	"license": "GPL-3.0-or-later",
	"engines": {
		"vscode": "^1.106.0"
	},
	"categories": [
		"Visualization",
		"Debuggers"
	],
	"activationEvents": [
		"onWebviewPanel:codeBaseRelationshipVisualizer"
	],
	"contributes": {
		"commands": [
			{
				"command": "codeBaseRelationshipVisualizer.start",
				"title": "Visualize your codebase",
				"category": "CodeBase Relationship Visualizer"
			}
		]
	},
	"main": "./dist/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run build-prod",
		"package": "vsce package",
		"publish": "vsce publish",
		"build": "npm-run-all build:*",
		"build:extension": "vite build --config ./vite.config.ts",
		"build:webview": "vite build --config ./vite.webview.config.ts",
		"build-prod": "npm-run-all build-prod:*",
		"build-prod:extension": "vite build --config ./vite.config.ts --mode production",
		"build-prod:webview": "vite build --config ./vite.webview.config.ts --mode production",
		"lint": "eslint .",
		"watch": "npm-run-all watch:*",
		"watch:extension": "vite build --config ./vite.config.ts --watch",
		"watch:webview": "vite build --config ./vite.webview.config.ts --watch",
		"test": "npm run test:unit && npm run test:integration",
		"test:ui": "vitest --ui",
		"test:unit": "vitest run",
		"test:unit:watch": "vitest",
		"test:integration": "npm run pretest && node ./dist/test/test/integration/run.js",
		"pretest": "tsc --project test/integration",
		"generate-docs": "typedoc",
		"format": "prettier --write --no-error-on-unmatched-pattern **/*.{js,jsx,ts,tsx,vue,json}"
	},
	"devDependencies": {
		"@eslint/js": "^9.39.1",
		"@types/child-process-promise": "^2.2.6",
		"@types/d3": "^7.4.3",
		"@types/lodash": "^4.17.21",
		"@types/mocha": "^10.0.10",
		"@types/node": "^22",
		"@types/text-encoding": "^0.0.40",
		"@types/vscode": "^1.106.1",
		"@types/vscode-webview": "^1.57.5",
		"@types/webpack": "^5.28.5",
		"@typescript-eslint/eslint-plugin": "^8.47.0",
		"@typescript-eslint/parser": "^8.47.0",
		"@vitest/ui": "^4.0.13",
		"@vscode/test-electron": "^2.5.2",
		"@vscode/vsce": "^3.7.0",
		"dedent-js": "^1.0.1",
		"eslint": "^9.39.1",
		"globals": "^16.5.0",
		"mocha": "^11.7.5",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.6.2",
		"ts-essentials": "^10.1.1",
		"ts-node": "^10.9.2",
		"typedoc": "^0.28.14",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.47.0",
		"vite": "^7.2.4",
		"vitest": "^4.0.13"
	},
	"dependencies": {
		"child-process-promise": "^2.2.1",
		"d3": "^7.9.0",
		"d3-context-menu": "^2.1.0",
		"lodash": "^4.17.21",
		"spawn-sync": "^2.0.0",
		"text-encoding": "^0.7.0",
		"tippy.js": "^6.3.7",
		"vscode-debugprotocol": "^1.51.0"
	}
}
